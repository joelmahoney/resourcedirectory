%h2 Filter Results

- if params[:address].present?
  = link_to 'Clear Filters', root_url
  %br/
  %br/
- else
  %div{:id => 'clear_filters'}
    Clear Filters
  %br/

%h3 Service Categories
%table
  - for category in @categories
    %tr
      %td.top{:width=>'20px'}
        = check_box_tag "category_#{category.id}", :class => 'category_checkbox'
      %td.top
        = category.name
        == (#{category.results_in_set(locations)})
        %div{:class => 'services', :id => "category_#{category.id}_services"}
          - for service in category.services
            %div
              = check_box_tag "service_#{service.id}", :class => 'service_checkbox'
              = service.name
              == (#{service.results_in_set(locations)})
%br/

%h3 Business Type
%table
  - for business_type in @business_type
    %tr
      %td.top{:width=>'20px'}
        = check_box_tag "business_type_#{business_type.id}", :class => 'business_type_checkbox'
      %td.top
        = business_type.name
        == (#{business_type.results_in_set(locations)})
%br/
%br/